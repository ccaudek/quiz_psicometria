\begin{solution}
\begin{verbatim}
library("tidyverse")
library("rethinking")

dd <- data.frame(covidConcern, germAversion)
dd$ga <- dd$germAversion - mean(dd$germAversion)

flist <- alist(
  covidConcern ~ dnorm(mu, sigma), 
  mu ~ a + b * ga,
  a ~ dnorm(31.33, 10),
  b ~ dnorm(0, 10),
  sigma ~ dunif(0, 100)
)

m <- quap( 
  flist,
  data = dd
)
precis(m, prob = 0.95)
\end{verbatim}
\end{solution}

